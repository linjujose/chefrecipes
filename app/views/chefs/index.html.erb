<%= render 'shared/page_title', title: 'List of all Chefs'%>

<div align= "center">
    <% @chefs.each do |chef| %>
        <ul class= "listing">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 well">
                    <section class="chef_info center">
                        <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
                    </section>
                    <div class= "chef-title">
                        <li>
                            <%= link_to chef.chefname.capitalize, chef_path(chef)%> 
                        </li>
                    </div>
                    <li>
                        <small>
                            <%= pluralize(chef.recipes.count, "recipe") if chef.recipes %>
                        </small>
                    </li>
                    <p>
                        <span class="quiet">
                            <small> 
                                Created <%= time_ago_in_words(chef.created_at) %> ago
                            </small>
                        </span>
                    </p>
                </div>
            </div>
        </ul>
    <% end %>
</div>